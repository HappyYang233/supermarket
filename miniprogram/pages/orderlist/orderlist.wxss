  background-color: #fff;
  margin: 40rpx 0 40rpx 0;
  box-shadow: gary 0px 1px 10px;
  padding: 30rpx 30rpx 10rpx 30rpx;
}

.order-img-container {
  height: 75px;
  width: 100px;
}
.order-intro {
  font-size: 0.5em;
  color: darkgrey;
}
.order-statu-spec {
  text-align:center;
}
.order-context {
  margin-top: 20rpx;
  font-size: 0.5em;
