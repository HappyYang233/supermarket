.wrapper .footer_tool {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 120rpx;
  background-color: #fff;
  display: flex;
  border-top: 1rpx solid #ccc;
}
.wrapper .footer_tool .car {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #black;
  font-size: 32rpx;
  font-weight: 600;
  background-color: var(--themeColor);
}
.wrapper .footer_tool .total_price_wrap {
  flex: 5;
  display: flex;
  text-align: left;
  justify-content: center;
  align-items: center;
}
.wrapper .footer_tool .total_price_wrap .total_price .total_price_text {
  color: #black;
  font-size: 34rpx;
  font-weight: 600;
}
.wrapper .footer_tool .order_pay_wrap {
  flex: 3;
  background-color: var(--themeColor);
  color: #black;
  font-size: 32rpx;
