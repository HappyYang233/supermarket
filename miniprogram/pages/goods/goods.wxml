<view class="wrapper">
	<view class="top">
		<view class="title">
			<span class="color-text">商店信息 </span>
			天府D区
		</view>
		<view class="search-box">
			<van-cell-group>
				<van-field value="{{ sms }}" center clearable placeholder="请输入商品名称" border="{{ false }}" use-button-slot>
					<van-button slot="button" size="small" type="primary">搜索</van-button>
				</van-field>
			</van-cell-group>
		</view>
	</view>

	<view class="good_container">
		<view class="good-content-left">
			<van-sidebar active-key="{{ activeKey }}" bind:change="onPageChange">
				<van-sidebar-item title="{{item.name}}" wx:for="{{leftMenuList}}" />
			</van-sidebar>
		</view>
		<scroll-view class="good-content-right" scroll-y="true">
			<view class="goods-item" wx:if="{{currentPage == 0}}" wx:for="{{snack}}">
				<van-card tag="热销" price="10.00" desc="{{item.goods_des}}" title="{{item.goods_name}}" thumb="{{ item.pic }}">
					<view class="good-extra" slot="footer">
						<view class="good-extra-stock">库存：{{item.goods_inventory}}</view>
						<van-button size="mini" bindtap="onAddGood" data-pickedgood="{{item}}">+</van-button>
					</view>
				</van-card>
			</view>
			<view class="goods-item" wx:if="{{currentPage == 1}}" wx:for="{{convience}}">
				<van-card tag="热销" price="10.00" desc="{{item.goods_des}}" title="{{item.goods_name}}" thumb="{{ item.pic }}">
					<view class="good-extra" slot="footer">
						<view class="good-extra-stock">库存：{{item.goods_inventory}}</view>
						<van-button size="mini">+</van-button>
					</view>
				</van-card>
			</view>
			<view class="goods-item" wx:if="{{currentPage == 2}}" wx:for="{{drink}}">
				<van-card tag="热销" price="10.00" desc="{{item.goods_des}}" title="{{item.goods_name}}" thumb="{{ item.pic }}">
					<view class="good-extra" slot="footer">
						<view class="good-extra-stock">库存：{{item.goods_inventory}}</view>
						<van-button size="mini">+</van-button>
					</view>
				</van-card>
			</view>
			<view class="goods-item" wx:if="{{currentPage == 3}}" wx:for="{{necessity}}">
				<van-card tag="热销" price="10.00" desc="{{item.goods_des}}" title="{{item.goods_name}}" thumb="{{ item.pic }}">
					<view class="good-extra" slot="footer">
						<view class="good-extra-stock">库存：{{item.goods_inventory}}</view>
						<van-button size="mini">+</van-button>
					</view>
				</van-card>
			</view>
		</scroll-view>
	</view>

	<view class="footer_tool">
		<view class="shopping-cart">
			<van-icon bindtap="onCartClick" name="shopping-cart-o" info="{{shopCartLists.length || 0}}" />
		</view>
		<view class="total_price_wrap">
			<view class="total_price">
				合计: <text class="total_price_text">{{shopCartLists.sumPrice}} 元</text>
			</view>
		</view>
		<view class="order_pay_wrap" bindtap="handlePay">
			<van-button round type="danger" size="small">结 算</van-button>
		</view>
	</view>



	<van-popup position="bottom" custom-style="height: 50%;" show="{{ CartListShow }}" bind:close="onCartListClose">
		<view class="total_price_wrap">
			<view class="total_price">
				合计: <text class="total_price_text">{{shopCartLists.sumPrice}} 元</text>
			</view>
		</view>
		<view class="order_pay_wrap" bindtap="handlePay">
			<van-button round type="danger" size="small">结 算</van-button>
		</view>
	</van-popup>

</view>